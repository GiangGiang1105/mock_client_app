<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.clientapp.view.auth.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.clientapp.view.auth.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_extraSignUpFragment"
            app:destination="@id/extraSignUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/extraSignUpFragment"
        android:name="com.example.clientapp.view.auth.fragments.ExtraSignUpFragment"
        android:label="fragment_extra_sign_up"
        tools:layout="@layout/fragment_extra_sign_up" />
</navigation>